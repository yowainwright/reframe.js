{
  "name": "reframe.js",
  "version": "3.0.0",
  "description": "Reframe.js: responsive iframes for embedded content",
  "main": "dist/reframe.js",
  "module": "dist/reframe.es.js",
  "unpkg": "dist/reframe.min.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "build:release": "yarn build && yarn test",
    "chore:delete-changelog-branch": "if git show-ref --quiet refs/heads/chore-changelog; then git branch -D chore-changelog; fi",
    "chore:branch": "git checkout -b chore-changelog",
    "chore:changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0",
    "chore:setup-next-work": "git checkout master && yarn chore:delete-changelog-branch",
    "chore:pr": "git add . && git commit -m '[chore] updates changelog' --no-verify && git push origin chore-changelog -f",
    "chore:setup-changelog": "git checkout master && git pull",
    "chore": "yarn chore:delete-changelog-branch && yarn chore:branch && yarn chore:changelog && yarn chore:pr && yarn chore:setup-next-work",
    "eslint": "eslint . --fix",
    "eslint:ci": "eslint .",
    "postpublish": "git tag $npm_package_version && git push origin --tags && yarn chore",
    "prepush": "yarn build && yarn test",
    "start": "yarn",
    "test:es-check": "es-check es5 dist/noframe.js dist/reframe.js dist/noframe.min.js dist/reframe.min.js dist/jquery.noframe.js dist/jquery.reframe.js dist/jquery.reframe.min.js dist/jquery.noframe.min.js",
    "test:phantom": "node run-tests.js",
    "test": "yarn test:phantom && yarn test:es-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/reframe.ts.git"
  },
  "keywords": [
    "js",
    "iframes",
    "fluid",
    "responsive",
    "video",
    "fitvids",
    "youtube",
    "embeds",
    "padding-top"
  ],
  "author": "Jeff Wainwright <yowainwright@gmail.com> (http://jeffry.in)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yowainwright/reframe.ts/issues"
  },
  "homepage": "https://github.com/yowainwright/reframe.ts#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^4.0.0",
    "@types/node": "^13.9.8",
    "@types/rollup": "^0.54.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.12",
    "es-check": "^5.0.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "jquery": "^3.1.0",
    "markdownlint-cli": "^0.22.0",
    "node-qunit-phantomjs": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "qunit": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.12.0",
    "rollup-plugin-uglify": "^6.0.4",
    "typescript": "^3.8.3"
  }
}
